<br>
<% if session[:user_id].nil? %>
  <h3><a href="/user/join">회원가입</a></h3>
  <h3><a href="/user/login">로그인</a></h3>
<% else %>
  <h3><a href="/post/new">글쓰기</a></h3>
  <h3><a href="/user/logout">로그아웃</a></h3>
<% end %>

<hr>
<% @posts.each do |post| %>
  <h3>글쓴이: <%= post.user.name %></h3>
  <h3>제목: <%= link_to post.title, "/post/#{post.id}" %></h3>
  <h3>내용: <%= post.content %> </h3>
  <hr>
<% end %>



